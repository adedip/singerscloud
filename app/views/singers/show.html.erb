<div class="row">
  <div class="large-24">
    <p id="notice"><%= notice %></p>

    <h2>
      <%= @singer.name %>
    </h2>
  </div>
</div>
    <div id="wordcloud" style="width: 1200px; height: 500px; position: relative;"></div>
<div class="row">
  <div class="large-24">
    <%= link_to 'modifica', edit_singer_path(@singer), class: 'button secondary small' %>
    <%= link_to 'indietro', singers_path, class: 'button secondary small' %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#wordcloud").jQCloud(<%= raw @words_count.to_json %>);
  });
</script>